<h1>User Edit Form</h1>
<% if @user.errors.present? %>
  <p>
    <%= @user.errors.full_messages.join(', ')%>
  </p>
<% end %>

<%= form_with model: @user, :class=>"form-group", local:true do |f| %>
    <div class="form-group mb-4">
        <label class="d-flex flex-start" >Name</label>
        <%= f.text_field(:name, class: 'form-control')%> 
    </div>
    <div class="form-group mb-4">
        <label class="d-flex flex-start" >Email</label>
        <%= f.email_field(:email, class: 'form-control')%>
    </div>

<%=f.submit  "Update", class: 'btn btn-outline-primary  d-flex flex-start mb-4' %> 

<% end %>

<div class = "btn btn-warning" >
<%= link_to "Change Password"  ,user_change_password_path(@user),data: {confirm: "Are you sure to change your password?"}%>
</div>