<%= form_for(@user, :url => url_for(:action => :do_change_password) , :html => { :method => :post }) do |f| %>

<div class="form-group mb-4">
    <label class="d-flex flex-start" >Current Password</label>
    <%= f.password_field :current_password ,class: 'form-control' %>
</div>

<div class="form-group mb-4">
    <label class="d-flex flex-start" >New Password</label>
    <%= f.password_field :new_password ,class: 'form-control'%>
</div>

<div class="form-group mb-4">
    <label class="d-flex flex-start" >Confirm New Password</label>
    <%= f.password_field :new_password_confirmation ,class: 'form-control'%>
</div>

  <div><%= f.submit "Change my password" %></div>
<% end %>


